					<button id="btn_testdised">Test Disabled/Enabled</button>
					<button id="btn_clearerror">Clear Error</button>
				</div>
			</div>


			<h2 id="txtState">Edit/View</h2>
			<form id="myform" locked="True">
				<div style="display: flex; column-gap: 10px; row-gap: 5px; flex-wrap: wrap;">
					
					<div class="input-field">
						<label for="obj_txt_nama">Nama</label>
